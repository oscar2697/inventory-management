{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "no-console": "warn", // Muestra advertencias cuando se usa console.log
    "react/react-in-jsx-scope": "off" // Desactiva la regla de React (Next.js maneja esto)
  },
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  }
}
